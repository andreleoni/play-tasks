<p id="notice"><%= notice %></p>

<h1>Time Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Hours</th>
      <th>Comment</th>
      <th>Project</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_sheets.each do |time_sheet| %>
      <tr>
        <td><%= time_sheet.hours %></td>
        <td><%= time_sheet.comment %></td>
        <td><%= time_sheet.project %></td>
        <td><%= time_sheet.task %></td>
        <td><%= link_to 'Show', time_sheet %></td>
        <td><%= link_to 'Edit', edit_time_sheet_path(time_sheet) %></td>
        <td><%= link_to 'Destroy', time_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time Sheet', new_time_sheet_path %>
