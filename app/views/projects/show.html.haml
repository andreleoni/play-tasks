- if notice.present?
  #card-alert.card.green
    .card-content.white-text
      = notice

.col.s12.m12{ style: "display: flex; align-items: center; justify-content: space-between;" }
  %h4
    = @project.title

  .actions
    = link_to  edit_project_path(@project), class: "btn waves-effect waves-light blue lighten-1" do
      Editar

      %i.material-icons.right
        mode_edit

    = link_to 'Voltar', projects_path, class: "btn waves-effect waves-light grey lighten-1"

%p
  = @project.description

#todo_items_wrapper
  .row.clearfix
    %table.highlight.striped
      %tbody
        %th{ width: "20" }
        %th= "Name"
        %th{ width: "20" }= "Ações"

      %tbody
        = render @project.tasks

  #tasks_form
    = render "tasks/form"
