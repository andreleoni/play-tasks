<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder: "Título" %>
  </div>

  <div class="field">
    <%= f.text_area :description, class: "materialize-textarea", placeholder: "Descrição" %>
  </div>

  <div class="actions">
    <% if @editing %>
      <%= button_tag :class => "btn waves-effect waves-light", :type => "submit", :data => { :disable_with => "Editando..." } do %>
        Editar <i class='material-icons right'> send </i>
      <% end %>
    <% else %>
      <%= button_tag :class => "btn waves-effect waves-light", :type => "submit", :data => { :disable_with => "Criando..." } do %>
        Criar <i class='material-icons right'> send </i>
      <% end %>
    <% end %>

    <%= link_to 'Back', projects_path, class: "btn waves-effect waves-light grey lighten-1" %>
  </div>
<% end %>
